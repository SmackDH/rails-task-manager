<h1>Create a new task 📝 </h1>

<div class="container mt-3">
  <%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.submit class: "btn btn-primary mt-2" %>
  <% end %>
</div>
<div>
<%= link_to 'Back', tasks_path %>
</div>
